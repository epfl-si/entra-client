# Entra Secret Alerter Environment Configuration
# Copy this file to .env and fill in your values

# Email Configuration
# ===================

# Required: Email address to send alerts to
TO_EMAIL=iam.dev@epfl.ch

# Optional: SMTP server host (default: mail.epfl.ch)
SMTP_HOST=mail.epfl.ch
# Optional: Skip TLS certificate verification for internal SMTP servers (default: true)
# Set to "false" for external SMTP servers with valid certificates
SMTP_SKIP_TLS_VERIFY=true

# Optional: From email address (default: noreply@epfl.ch)
FROM_EMAIL=noreply@epfl.ch

# Optional: Email subject line (default: "Entra Secrets Expiring Soon")
EMAIL_SUBJECT="Entra Secrets Expiring Soon"

# Entra/Azure AD Authentication Configuration
# ========================j==================

# Required: Your Azure tenant ID
ENTRA_TENANT="f6c2556a-c4fb-4ab1-a2c7-9e220df11c43"

# Required: Application/Client ID with permissions to read applications and service principals
ENTRA_CLIENTID="593ef0REDACTEDc8b286ddfc"

# Required: Client secret for authentication
ENTRA_SECRET="j5A8REDACTEDQWNKEXzXmTKScUA"

# Application Configuration
# ========================

# Optional: Days threshold for expiring secrets (default: 30)
EXPIRY_THRESHOLD_DAYS=30

# Optional: Enable debug logging (default: false)
DEBUG=true

# Optional: Log level (default: info)
# Options: debug, info, warn, error
LOG_LEVEL=info
